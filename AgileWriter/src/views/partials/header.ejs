<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <title>Agile Writer</title>
    
    <link
		rel="stylesheet"
		href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
        integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
		crossorigin="anonymous"
	/>
    <link
		rel="stylesheet"
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
		crossorigin="anonymous"
	/>
	<% let link_tags = ''; %>
	<% page_link_tags.forEach(link_data => {
		link_tags += `<link\n`
		if (link_data.rel)					link_tags += `\t rel="${link_data.rel}"\n`
		if (link_data.href)					link_tags += `\t href="${link_data.href}"\n`;
		if (link_data.integrity)			link_tags += `\t integrity="${link_data.integrity}"\n`;
		if (link_data.crossorigin === true)	link_tags += `\t crossorigin\n`;
		else if (link_data.crossorigin)		link_tags += `\t crossorigin="${link_data.crossorigin}"\n`;
		link_tags += `>\n`;
	}); %>
	<!-- console.log(link_tags); -->
	<%- link_tags %>
</head>