<%- include ('../partials/header') %>
<script type="text/javascript" src="public/bundle.js"></script>
</head>

<body>
	<%- include ('../partials/menu') %>
	<div class="container-fluid">
		<br>

		<div class="row">
			<div class="col-8">
				<div class="card-header bg-light">
					<nav class="navbar navbar-expand-lg navbar-dark bg-light">
						<ul class="navbar-nav">
							<li style="padding-right: 10px;">
								Font Size:
								<select id="fontSize" onclick="changeSize()">
									<option value="1">1</option>
									<option value="2">2</option>
									<option value="3">3</option>
									<option value="4">4</option>
									<option value="5">5</option>
									<option value="6">6</option>
									<option value="7">7</option>
									<option value="8">8</option>
								</select>
							</li>

							<li style="padding-right: 10px;">
								Font:
								<select id="input-font" class="input" onchange="changeFont(this);">
									<option value="Arial">Arial</option>
									<option value="Helvetica">Helvetica</option>
									<option value="Times New Roman">Times New Roman</option>
									<option value="Sans serif">Sans serif</option>
									<option value="Courier New">Courier New</option>
									<option value="Verdana">Verdana</option>
									<option value="Georgia">Georgia</option>
									<option value="Palatino">Palatino</option>
									<option value="Garamond">Garamond</option>
									<option value="Comic Sans MS">Comic Sans MS</option>
									<option value="Arial Black">Arial Black</option>
									<option value="Tahoma">Tahoma</option>
									<option value="Comic Sans MS">Comic Sans MS</option>
									<option value="Roboto">Roboto</option>
									<option value="Rainway">Rainway</option>
								</select>
							</li>

							<li style="padding-right: 10px;">
								<a href="" onclick="">
									<span class="fa fa-bold fa-fw"></span>
								</a>
							</li>

							<li style="padding-right: 10px;">
								<a href="" onclick="">
									<span class="fa fa-italic fa-fw"></span>
								</a>
							</li>

							<li style="padding-right: 10px;">
								<a href="" onclick="">
									<span class="fa fa-underline fa-fw"></span>
								</a>
							</li>
						</ul>
					</nav>
				</div><!--card-header-->
				<div class="card-body" style="background-color: white; border-radius: 0 0 5px 5px;">
					<form>
						<div class="form-group">
							<textarea class="form-control" rows="5" id="txtBox"
									placeholder="Enter keywords to generate a prompt..."></textarea>
							<p type="text" id="promptDisplay"> Select generated prompt to be shown here.</p>
						</div>
					</form>
				</div>
			</div><!--class="col-8"-->

			<div class="col-4">
				<div class="row" style="padding-right: 15px; padding-bottom: 15px;">
					<div class="card" style="flex: auto;">
						<div class="card-header">
							<h3>Generated Prompts</h3>
						</div>
						<div class="card-body" style="overflow-y: auto;">
							<ul class="list-group" id="generatedPromptList">
							</ul>
						</div>
					</div>
				</div><!--Inner row 1-->

				<div class="row" style="padding-right: 15px;">
					<div class="card" style="flex: auto; min-height: 340px;">
						<div class="card-header">
							<h3>Saved Prompts</h3>
						</div>
						<div class="card-body" style="overflow-y: auto; max-height: 270px;">
							<ul class="list-group" id="savedPromptList">
							</ul>
						</div>
					</div>
				</div><!--Inner row 2-->
			</div><!--class="col-4"-->
		</div><!--class="row"-->

		<br>
		<div class="justify-content-center">
			<button class="rounded bg-dark btn-outline-dark text-light" onclick="fscode.newPrompt()" id="genP">Generate Prompt
			</button>
			<button class="rounded bg-dark btn-outline-dark text-light" onclick="fscode.removePrompt()" id="delP">Delete Prompt
			</button>
			<button class="rounded bg-dark btn-outline-dark text-light" onclick='alert("unimplemented")' id="sP">Save Prompt</button>
		</div>
	</div>
<%- include('../partials/footer') %>
</html>